<UserControl x:Class="DanielAmosApp.Views.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DanielAmosApp.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
            >
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Machine overview : "
                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                 Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,16">

            <materialDesign:Card Margin="0,0,16,0" 
                               Width="180"
                               materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel Margin="8">
                    <DockPanel>
                        <materialDesign:PackIcon Kind="Factory" 
                                               Height="24" 
                                               Width="24"
                                               Foreground="#2196F3"/>
                        <TextBlock Text="Running Machines"
                                 Margin="8,0,0,0"
                                 VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock Text="8/10"
                             FontSize="24"
                             Margin="0,8,0,0"
                             Foreground="#2196F3"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="0,0,16,0" 
                   Width="180"
                   materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel Margin="8">
                    <DockPanel>
                        <materialDesign:PackIcon Kind="Factory" 
                                   Height="24" 
                                   Width="24"
                                   Foreground="#FFD9B009"/>
                        <TextBlock Text="Idle Machines"
                     Margin="8,0,0,0"
                     VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock Text="2/10"
                 FontSize="24"
                 Margin="0,8,0,0"
                 Foreground="#FFD9B009"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="0,0,16,0" 
                               Width="180"
                               materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel Margin="8">
                    <DockPanel>
                        <materialDesign:PackIcon Kind="Alert" 
                                               Height="24" 
                                               Width="24"
                                               Foreground="#F44336"/>
                        <TextBlock Text="Offline Machines"
                                 Margin="8,0,0,0"
                                 VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock Text="6/30"
                             FontSize="24"
                             Margin="0,8,0,0"
                             Foreground="#F44336"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Width="180"
                               materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel Margin="8">
                    <DockPanel>
                        <materialDesign:PackIcon Kind="Thermometer" 
                                               Height="24" 
                                               Width="24"
                                               Foreground="#4CAF50"/>
                        <TextBlock Text="Average Temperature"
                                 Margin="8,0,0,0"
                                 VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock Text="24.5°C"
                             FontSize="24"
                             Margin="0,8,0,0"
                             Foreground="#4CAF50"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>

        <materialDesign:Card Grid.Row="2"
                    materialDesign:ElevationAssist.Elevation="Dp2">
            <Image HorizontalAlignment="Center" 
           VerticalAlignment="Center"
           Height="194" 
           Width="201"
           Margin="0"
            Source="/Assets/Images/Info.png"
           />
        </materialDesign:Card>
    </Grid>
</UserControl>
